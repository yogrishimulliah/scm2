<Window x:Class="BatteryMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatteryMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="batStatus" Content="Battery Status&#xD;&#xA;" HorizontalAlignment="Left" Margin="125,90,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="powSource" Content="Power Source&#xD;&#xA;" HorizontalAlignment="Left" Margin="125,223,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="batteryStatus" Content="Default&#xD;&#xA;" HorizontalAlignment="Left" Margin="396,90,0,0" VerticalAlignment="Top"/>
        <Label x:Name="powerSource" Content="Default&#xD;&#xA;" HorizontalAlignment="Left" Margin="396,223,0,0" VerticalAlignment="Top"/>
        <Button x:Name="exitBtn" Content="Exit" HorizontalAlignment="Left" Margin="150,323,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="refreshBtn" Content="Refresh" HorizontalAlignment="Left" Margin="369,323,0,0" VerticalAlignment="Top" Width="75" Click="RefreshBtn_Click"/>

    </Grid>
</Window>
